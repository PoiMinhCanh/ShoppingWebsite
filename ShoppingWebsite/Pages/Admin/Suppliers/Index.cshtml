@page
@model ShoppingWebsite.Pages.Admin.Suppliers.IndexModel

@{
    ViewData["Title"] = "Suppliers";
}


<h2>Suppliers</h2>
<hr />

<a class="btn btn-primary btn-sm mb-2" asp-page="Create">Create New</a>

@if(Model.Suppliers != null && Model.Suppliers.Count > 0)
{
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Suppliers[0].SupplierId)</th>
                        <th>@Html.DisplayNameFor(model => model.Suppliers[0].CompanyName)</th>
                        <th>@Html.DisplayNameFor(model => model.Suppliers[0].Address)</th>
                        <th>@Html.DisplayNameFor(model => model.Suppliers[0].Phone)</th>
                        <th>Action to perform</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Suppliers)
                    {
                        <tr>
                            <td>@item.SupplierId</td>
                            <td>@item.CompanyName</td>
                            <td>@item.Address</td>
                            <td>@item.Phone</td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-page="Detail" asp-route-id="@item.SupplierId">Detail</a>
                                <a class="btn btn-success btn-sm" asp-page="Update" asp-route-id="@item.SupplierId">Update</a>
                                <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@item.SupplierId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else {
    <p class="text-danger text-center font-weight-bold">No have any data.</p>
}